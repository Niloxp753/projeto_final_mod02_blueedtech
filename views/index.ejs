<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">
    <title>Projeto Final Mod 2 BlueEdtech</title>
    <!-- <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script> -->
</head>

<body>
    <div class="container">
        <%-include('./partials/header.ejs')%>
        <div class="content">
            <main>
                <% pcgamers.forEach(element => { %>
                <a href="/detalhes/<%= element.id %>">
                    <div class="card_conteiner">
                        <div class="header_card">
                            <span class="card_diretores">
                                <%= element.fabricante %>
                            </span>
                        </div>
                        <div class="main_card">
                            <img src="<%= element.img %>" alt="<%= element.modelo %>">
                        </div>
                        <div class="footer_card">
                            <li class="card_model">
                                <%= element.modelo %>
                            </li>
                        </div>
                    </div>
                </a>
                <% }) %>
            </main>
        </div>
        <footer>
            <p>All rights reserved <a target="_blank" href="https://github.com/Niloxp753">Danilo D. Dos Santos &copy;</a></p>
        </footer>
    </div>
</body>

</html>